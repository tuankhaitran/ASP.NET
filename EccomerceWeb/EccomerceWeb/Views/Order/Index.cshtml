@using EccomerceWeb.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container" style="margin: 30px auto;">
        <p>@Html.ActionLink("Export Order Listing", "ExportOrderListing")</p>

        <table class="table">
            <tr>
                <th>
                    OrderID
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>
                    Date
                </th>
                <th>
                    TotalPrice
                </th>
                <th>
                    Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Zip
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.OrderID

                    </td>
                    <td>
                        @{var fullname = item.UserFname + " " + item.UserLname;}
                        @fullname
                    </td>

                    <td>
                        @item.UserPhone
                    </td>
                    <td>
                        @item.UserEmail
                    </td>
                    <td>
                        @String.Format("{0:MM/dd/yyyy}", item.OrderDate)
                    </td>
                    <td>
                        $@Math.Round(item.TotalPrice,2)
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.City
                    </td>
                    <td>
                        @item.State
                    </td>
                    <td>
                        @item.Zip
                    </td>

                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.OrderID })
                    </td>
                </tr>
            }
        </table>
        <div class="clear"></div>
        @if (@Model.PageCount > 1)
        {
            <span>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
            <div class="div-pagination">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>
        }
    </div>

